<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/maruburi"
                android:gravity="left"
                android:text="분유량 기록"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/maruburi"
                android:text="블"
                app:backgroundTint="#CDDC39" />

            <Button
                android:id="@+id/graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/maruburi"
                android:text="그"
                app:backgroundTint="#CDDC39" />

            <Button
                android:id="@+id/dataSend"
                android:layout_width="16dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:text="데이터전송" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/beforVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/maruburi"
                android:text="먹기 전"
                app:backgroundTint="#CDDC39" />

            <Button
                android:id="@+id/afterVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/maruburi"
                android:text="먹은 후"
                app:backgroundTint="#CDDC39" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_weight="2"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/beforData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/maruburi"
                android:inputType="textPersonName"

                android:hint="먹기 전" />
            <EditText
                android:id="@+id/afterData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/maruburi"
                android:inputType="textPersonName"
                android:hint="먹은 후" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/recode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/maruburi"
                android:text="기록"
                app:backgroundTint="#CDDC39" />

            <Button
                android:id="@+id/delete"
                android:layout_width="123dp"
                android:layout_height="67dp"
                android:layout_above="@+id/test"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginStart="84dp"
                android:layout_marginLeft="84dp"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/recode"
                android:layout_toRightOf="@+id/recode"
                android:fontFamily="@font/maruburi"
                android:text="삭제"
                app:backgroundTint="#CDDC39" />

            <TextView
                android:id="@+id/test"
                android:layout_width="318dp"
                android:layout_height="279dp"
                android:layout_below="@+id/recode"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="21dp"
                android:fontFamily="@font/maruburi"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
/>


        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>